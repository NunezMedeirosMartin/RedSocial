@model IEnumerable<Obligatorio.Miembro>

<h1>SOLICITUDES PENDIENTES</h1>
<br></br>

@foreach (var miembro in Model)
{



    <table style="width:100%" class="table table-striped">
        <thead>
            <tr>
                <th>USUARIO</th>
                <th>MAIL</th>
                <th>ESTADO</th>
            </tr>
        </thead>
        <tbody>
        <tr>
                <td> @miembro.Nombre @miembro.Apellido  </td>
                    <td> @miembro.Mail <input type="hidden" name="idMiembro" value="@miembro.Id" />  </td>
                    <td> Pendiente</td>
                <td>  <a class="btn" href="@Url.Action("AceptarInvitacion", "Usuario", new {idMiembro=miembro.Id})"><input type="button" value="Aceptar invitacion" class="btn btn-primary"></a> </td>
                <td> <a class="btn" href="@Url.Action("RechazarInvitacion", "Usuario", new {idMiembro=miembro.Id})"><input type="button" value="Rechazar invitacion" class="btn btn-primary"></a> </td>

        </tr>
        </tbody>
    </table>
    <div style="margin-top:50px"></div>
    
}
@section Scripts{

    <script>
        $(document).scroll(function () {
            localStorage['page'] = document.URL;
            localStorage['scrollTop'] = $(document).scrollTop();
        });

        $(document).ready(function () {
            if (localStorage['page'] == document.URL) {
                $(document).scrollTop(localStorage['scrollTop']);
            }
        });

    </script>
}





